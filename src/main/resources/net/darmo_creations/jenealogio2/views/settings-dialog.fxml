<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
  <content>
    <VBox prefWidth="100.0">
      <children>
        <BorderPane>
          <top>
            <Label text="%dialog.settings.interface_box.title" BorderPane.alignment="CENTER"/>
          </top>
          <center>
            <GridPane hgap="10.0" vgap="5.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
              </rowConstraints>
              <children>
                <Label text="%dialog.settings.interface_box.language.label" GridPane.halignment="RIGHT"/>
                <ComboBox fx:id="languageCombo" onAction="#onLanguageSelect" prefWidth="200.0" GridPane.columnIndex="1"
                          GridPane.halignment="LEFT"/>
                <Label text="%dialog.settings.interface_box.theme.label" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="1"/>
                <ComboBox fx:id="themeCombo" onAction="#onThemeSelect" prefWidth="200.0" GridPane.columnIndex="1"
                          GridPane.halignment="LEFT" GridPane.rowIndex="1"/>
              </children>
              <padding>
                <Insets bottom="10.0" top="10.0"/>
              </padding>
            </GridPane>
          </center>
        </BorderPane>
      </children>
    </VBox>
  </content>
</DialogPane>
